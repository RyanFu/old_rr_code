<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee web-app_2_4.xsd"
	version="2.4">

	<distributable />
	<display-name>simple test</display-name>

	<servlet>
		<servlet-name>echo</servlet-name>
		<servlet-class>lwb.test.servlet.SimpleServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>apitest</servlet-name>
		<servlet-class>lwb.test.servlet.ApiTestServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>readtest</servlet-name>
		<servlet-class>lwb.test.servlet.ReadTestServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>writetest</servlet-name>
		<servlet-class>lwb.test.servlet.WriteTestServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>streamtest</servlet-name>
		<servlet-class>lwb.test.servlet.StreamTestServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>buffstreamtest</servlet-name>
		<servlet-class>lwb.test.servlet.BuffStreamTestServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>echo</servlet-name>
		<url-pattern>/echo</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>apitest</servlet-name>
		<url-pattern>/apitest</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>readtest</servlet-name>
		<url-pattern>/readtest</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>writetest</servlet-name>
		<url-pattern>/writetest</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>streamtest</servlet-name>
		<url-pattern>/streamtest</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>buffstreamtest</servlet-name>
		<url-pattern>/buffstreamtest</url-pattern>
	</servlet-mapping>
	
	
</web-app>
